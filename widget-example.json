{
  "name": "Incident Dashboard Widget",
  "description": "Real-time incident monitoring dashboard",
  "components": [
    {
      "type": "header",
      "binding": "title",
      "content": "Incident Overview"
    },
    {
      "type": "metric",
      "binding": "total_count",
      "label": "Total Active Incidents"
    },
    {
      "type": "metric", 
      "binding": "critical_count",
      "label": "Critical Incidents"
    },
    {
      "type": "list",
      "binding": "recent_incidents",
      "label": "Recent Incidents"
    },
    {
      "type": "chart",
      "binding": "incident_trend",
      "label": "7-Day Trend"
    }
  ],
  "dataSources": [
    {
      "name": "recent_incidents",
      "table": "incident",
      "query": "active=true^ORDERBYDESCsys_created_on",
      "limit": 10
    },
    {
      "name": "total_count",
      "table": "incident",
      "query": "active=true",
      "aggregate": "COUNT"
    },
    {
      "name": "critical_count",
      "table": "incident", 
      "query": "active=true^priority=1",
      "aggregate": "COUNT"
    }
  ],
  "options": [
    {
      "name": "refresh_interval",
      "label": "Refresh Interval (seconds)",
      "type": "integer",
      "default_value": 30
    },
    {
      "name": "show_chart",
      "label": "Show Trend Chart",
      "type": "boolean",
      "default_value": true
    }
  ],
  "dependencies": [
    "angular-chart.js"
  ]
}