<script>
  // Animated counter function
  function animateCounter(element: HTMLElement, target: number, duration = 2000) {
    const start = 0;
    const startTime = performance.now();

    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function for smooth animation
      const easeOutQuart = 1 - Math.pow(1 - progress, 4);
      const current = Math.floor(start + (target - start) * easeOutQuart);

      element.textContent = current.toLocaleString();

      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }

    requestAnimationFrame(update);
  }

  // GitHub stars data
  const starsData = {
    snowFlow: 0,
    snowCode: 0,
    total: 0
  };

  // Fetch GitHub stars for both repos
  async function fetchGitHubStars() {
    const repos = [
      { key: 'snowFlow', url: 'https://api.github.com/repos/groeimetai/snow-flow' },
      { key: 'snowCode', url: 'https://api.github.com/repos/groeimetai/snow-code' }
    ];

    for (const repo of repos) {
      try {
        const response = await fetch(repo.url);
        if (response.ok) {
          const data = await response.json();
          (starsData as any)[repo.key] = data.stargazers_count || 0;
        }
      } catch (e) {
        // Use fallback of 0
      }
    }
    starsData.total = starsData.snowFlow + starsData.snowCode;
  }

  // Fetch stars on page load
  fetchGitHubStars();

  // Initialize counters when visible
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const totalEl = document.getElementById('totalCounter');
        const snowFlowStarsEl = document.getElementById('snowFlowStars');
        const snowCodeStarsEl = document.getElementById('snowCodeStars');

        if (starsData.total > 0 && totalEl) {
          animateCounter(totalEl, starsData.total, 2500);
        }

        if (starsData.snowFlow > 0 && snowFlowStarsEl) {
          animateCounter(snowFlowStarsEl, starsData.snowFlow, 2000);
        }

        if (starsData.snowCode > 0 && snowCodeStarsEl) {
          animateCounter(snowCodeStarsEl, starsData.snowCode, 2000);
        }

        observer.disconnect();
      }
    });
  }, { threshold: 0.1 });

  const totalSection = document.querySelector('.total-section');
  if (totalSection) {
    observer.observe(totalSection);
  }
</script>
