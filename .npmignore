jest.config.js
.eslintrc*
.prettierrc*
cloudbuild*.yaml
fix-*.sh
*.test.json
snowflow.config.example.ts
turbo.json
bunfig.toml
bun.lock

# ===========================================
# Git and CI
# ===========================================
.git/
.github/
.gitignore
.husky/

