# ===========================================
# Snow-Flow .npmignore
# Only publish what's needed for the npm package
# ===========================================

# Source files (only dist/ is needed)
src/
*.ts
!dist/**/*.d.ts
!dist/**/*.js

# CRITICAL: Include templates and schemas for Snow-Flow functionality
!src/templates/
!src/templates/**/*.json
!src/schemas/
!src/schemas/**/*.json

# ===========================================
# Development & Runtime directories
# ===========================================
.claude/
.claude-flow/
.roo/
.roomodes
.snow-flow/
.snow-code/
.snowcode/
.swarm/
.hive-mind/
.env*
!.env.example

# ===========================================
