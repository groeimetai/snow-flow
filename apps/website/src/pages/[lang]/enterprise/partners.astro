---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, type Lang } from '../../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } }
  ];
}

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

const title = t('partners.meta.title');
const description = t('partners.meta.description');
---

<BaseLayout title={title} description={description}>
    <link rel="stylesheet" href="/styles/enterprise.css" />

    <!-- Background Effects -->
    <div class="bg-grid"></div>
    <div class="bg-gradient"></div>
    <div class="bg-noise"></div>

    <!-- Hero Section -->
    <section class="enterprise-hero">
        <div class="hero-glow safety-glow"></div>
        <div class="container">
            <div class="hero-content">
                <nav class="breadcrumb">
                    <a href={`/${lang}/enterprise`}>Enterprise</a>
                    <span>/</span>
                    <span>{t('partners.breadcrumb')}</span>
                </nav>

                <div class="hero-badge safety-badge">
                    <span class="pulse safety-pulse"></span>
                    {t('partners.hero.badge')}
                </div>

                <h1 class="hero-title">
                    <span class="small">{t('partners.hero.badge')}</span>
                    <span class="gradient safety-gradient">AI DEVELOPMENT</span><br />
                    YOU CAN TRUST.
                </h1>

                <p class="hero-subtitle">
                    {t('partners.hero.subtitle')}
                </p>

                <div class="hero-ctas">
                    <a href="mailto:partners@snow-flow.dev" class="btn btn-safety">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        {t('partners.hero.cta')}
                    </a>
                    <a href={`/${lang}/enterprise`} class="btn btn-secondary">
                        {t('partners.hero.ctaSecondary')}
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Safety Overview Section -->
    <section class="section safety-overview-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label safety-label">{t('partners.safety.label')}</span>
                <h2 class="section-title">{t('partners.safety.title')}</h2>
                <p class="section-subtitle">{t('partners.safety.subtitle')}</p>
            </div>

            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat1')}</span>
                    <span class="stat-label">{t('partners.safety.stat1Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat1Desc')}</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat2')}</span>
                    <span class="stat-label">{t('partners.safety.stat2Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat2Desc')}</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat3')}</span>
                    <span class="stat-label">{t('partners.safety.stat3Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat3Desc')}</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Protection Layers Section -->
    <section class="section protection-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label safety-label">{t('partners.protection.label')}</span>
                <h2 class="section-title">{t('partners.protection.title')}</h2>
                <p class="section-subtitle">{t('partners.protection.subtitle')}</p>
            </div>

            <div class="protection-grid">
                <!-- Pre-Deployment Validation -->
                <div class="protection-card" data-aos="fade-up">
                    <div class="protection-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                            <polyline points="9 12 11 14 15 10"></polyline>
                        </svg>
                    </div>
                    <h3>{t('partners.protection.validation.title')}</h3>
                    <p class="protection-desc">{t('partners.protection.validation.desc')}</p>
                    <ul class="protection-features">
                        <li>{t('partners.protection.validation.feature1')}</li>
                        <li>{t('partners.protection.validation.feature2')}</li>
                        <li>{t('partners.protection.validation.feature3')}</li>
                        <li>{t('partners.protection.validation.feature4')}</li>
                    </ul>
                </div>

                <!-- Widget Preview -->
                <div class="protection-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="protection-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                    <h3>{t('partners.protection.preview.title')}</h3>
                    <p class="protection-desc">{t('partners.protection.preview.desc')}</p>
                    <ul class="protection-features">
                        <li>{t('partners.protection.preview.feature1')}</li>
                        <li>{t('partners.protection.preview.feature2')}</li>
                        <li>{t('partners.protection.preview.feature3')}</li>
                        <li>{t('partners.protection.preview.feature4')}</li>
                    </ul>
                </div>

                <!-- Update Set Isolation -->
                <div class="protection-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="protection-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                            <line x1="12" y1="22.08" x2="12" y2="12"></line>
                        </svg>
                    </div>
                    <h3>{t('partners.protection.isolation.title')}</h3>
                    <p class="protection-desc">{t('partners.protection.isolation.desc')}</p>
                    <ul class="protection-features">
                        <li>{t('partners.protection.isolation.feature1')}</li>
                        <li>{t('partners.protection.isolation.feature2')}</li>
                        <li>{t('partners.protection.isolation.feature3')}</li>
                        <li>{t('partners.protection.isolation.feature4')}</li>
                    </ul>
                </div>

                <!-- Role-Based Access Control -->
                <div class="protection-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="protection-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                    </div>
                    <h3>{t('partners.protection.access.title')}</h3>
                    <p class="protection-desc">{t('partners.protection.access.desc')}</p>
                    <ul class="protection-features">
                        <li>{t('partners.protection.access.feature1')}</li>
                        <li>{t('partners.protection.access.feature2')}</li>
                        <li>{t('partners.protection.access.feature3')}</li>
                        <li>{t('partners.protection.access.feature4')}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Stakeholder Safety Section -->
    <section class="section stakeholder-safety-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label safety-label">{t('partners.stakeholders.label')}</span>
                <h2 class="section-title">{t('partners.stakeholders.title')}</h2>
                <p class="section-subtitle">{t('partners.stakeholders.subtitle')}</p>
            </div>

            <div class="stakeholder-comparison">
                <div class="comparison-card can-do">
                    <div class="comparison-header">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <h3>{t('partners.stakeholders.canDoTitle')}</h3>
                    </div>
                    <ul>
                        <li>{t('partners.stakeholders.can1')}</li>
                        <li>{t('partners.stakeholders.can2')}</li>
                        <li>{t('partners.stakeholders.can3')}</li>
                        <li>{t('partners.stakeholders.can4')}</li>
                    </ul>
                </div>

                <div class="comparison-badge">
                    <span class="badge-number">174</span>
                    <span class="badge-text">{t('partners.stakeholders.badge')}</span>
                </div>

                <div class="comparison-card dev-do">
                    <div class="comparison-header">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="16 18 22 12 16 6"></polyline>
                            <polyline points="8 6 2 12 8 18"></polyline>
                        </svg>
                        <h3>{t('partners.stakeholders.devDoTitle')}</h3>
                    </div>
                    <ul>
                        <li>{t('partners.stakeholders.dev1')}</li>
                        <li>{t('partners.stakeholders.dev2')}</li>
                        <li>{t('partners.stakeholders.dev3')}</li>
                        <li>{t('partners.stakeholders.dev4')}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Partner Benefits Section (Condensed) -->
    <section class="section benefits-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label partner-label">{t('partners.benefits.label')}</span>
                <h2 class="section-title">{t('partners.benefits.title')}</h2>
                <p class="section-subtitle">{t('partners.benefits.subtitle')}</p>
            </div>

            <div class="benefits-grid-small">
                <div class="benefit-card-small">
                    <div class="benefit-icon-small">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path>
                            <line x1="12" y1="18" x2="12" y2="6"></line>
                        </svg>
                    </div>
                    <h3>{t('partners.benefits.revenue.title')}</h3>
                    <p>{t('partners.benefits.revenue.desc')}</p>
                </div>

                <div class="benefit-card-small">
                    <div class="benefit-icon-small">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="3" y1="9" x2="21" y2="9"></line>
                            <line x1="9" y1="21" x2="9" y2="9"></line>
                        </svg>
                    </div>
                    <h3>{t('partners.benefits.whitelabel.title')}</h3>
                    <p>{t('partners.benefits.whitelabel.desc')}</p>
                </div>

                <div class="benefit-card-small">
                    <div class="benefit-icon-small">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                    </div>
                    <h3>{t('partners.benefits.trust.title')}</h3>
                    <p>{t('partners.benefits.trust.desc')}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section safety-cta">
        <div class="container">
            <div class="cta-content">
                <h2>{t('partners.cta.title')}</h2>
                <p>{t('partners.cta.subtitle')}</p>
                <div class="cta-buttons">
                    <a href="mailto:partners@snow-flow.dev" class="btn btn-safety btn-large">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        {t('partners.cta.primary')}
                    </a>
                    <a href={`/${lang}/enterprise/customers`} class="btn btn-secondary btn-large">
                        {t('partners.cta.secondary')}
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-brand">
                <a href={`/${lang}/`} class="footer-logo" aria-label="Snow-Flow Home">
                    <svg class="footer-logo-svg" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <linearGradient id="footer-gradient" x1="16" y1="9" x2="16" y2="23" gradientUnits="userSpaceOnUse">
                                <stop offset="0%" stop-color="#FFFFFF"/>
                                <stop offset="100%" stop-color="#00D9FF"/>
                            </linearGradient>
                        </defs>
                        <path d="M4 23 L10 9 L16 15 L22 9 L28 23 Z" fill="url(#footer-gradient)" stroke="#00D9FF" stroke-width="1.2" stroke-linejoin="round"/>
                    </svg>
                    <span class="footer-logo-text">
                        <span class="snow">SNOW</span><span class="flow">FLOW</span>
                    </span>
                </a>
                <p class="footer-tagline">
                    {t('footer.tagline')}
                </p>
            </div>

            <div class="footer-bottom">
                <p class="footer-copyright">
                    {t('footer.copyright')}
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Scroll animations
        const protectionCards = document.querySelectorAll('.protection-card');

        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        protectionCards.forEach(card => {
            observer.observe(card);
        });
    </script>
</BaseLayout>

<style>
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 24px;
        font-size: 0.9rem;
    }

    .breadcrumb a {
        color: var(--color-text-secondary, #94A3B8);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
        color: #22C55E;
    }

    .breadcrumb span {
        color: var(--color-text-muted, #64748B);
    }

    /* Safety Theme */
    .safety-badge {
        background: rgba(34, 197, 94, 0.1);
        border-color: rgba(34, 197, 94, 0.3);
        color: #22C55E;
    }

    .safety-pulse {
        background: #22C55E;
    }

    .safety-gradient {
        background: linear-gradient(135deg, #22C55E 0%, #16A34A 50%, #86EFAC 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-shift 4s ease infinite;
    }

    .safety-label {
        background: rgba(34, 197, 94, 0.1);
        border-color: rgba(34, 197, 94, 0.2);
        color: #22C55E;
    }

    .partner-label {
        background: rgba(245, 158, 11, 0.1);
        border-color: rgba(245, 158, 11, 0.2);
        color: #F59E0B;
    }

    .btn-safety {
        background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%);
        color: #000;
    }

    .btn-safety:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(34, 197, 94, 0.3);
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-top: 48px;
    }

    @media (max-width: 768px) {
        .stats-row {
            grid-template-columns: 1fr;
        }
    }

    .stat-card {
        text-align: center;
        padding: 32px;
        background: var(--color-card-bg, #0d0d14);
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 16px;
    }

    .stat-number {
        display: block;
        font-size: 3rem;
        font-weight: 900;
        color: #22C55E;
        line-height: 1;
    }

    .stat-label {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        margin-top: 8px;
    }

    .stat-desc {
        display: block;
        font-size: 0.9rem;
        color: var(--color-text-secondary, #94A3B8);
        margin-top: 8px;
    }

    /* Protection Grid */
    .protection-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-top: 48px;
    }

    @media (max-width: 968px) {
        .protection-grid {
            grid-template-columns: 1fr;
        }
    }

    .protection-card {
        padding: 32px;
        background: var(--color-card-bg, #0d0d14);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s ease;
    }

    .protection-card.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .protection-card:hover {
        border-color: rgba(34, 197, 94, 0.3);
    }

    .protection-icon {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(34, 197, 94, 0.1);
        color: #22C55E;
        margin-bottom: 20px;
    }

    .protection-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .protection-desc {
        color: var(--color-text-secondary, #94A3B8);
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 20px;
    }

    .protection-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .protection-features li {
        padding: 8px 0;
        padding-left: 24px;
        position: relative;
        color: var(--color-text-secondary, #94A3B8);
        font-size: 0.9rem;
    }

    .protection-features li::before {
        content: 'âœ“';
        position: absolute;
        left: 0;
        color: #22C55E;
        font-weight: bold;
    }

    /* Stakeholder Comparison */
    .stakeholder-comparison {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 32px;
        align-items: center;
        margin-top: 48px;
    }

    @media (max-width: 968px) {
        .stakeholder-comparison {
            grid-template-columns: 1fr;
        }

        .comparison-badge {
            order: -1;
        }
    }

    .comparison-card {
        padding: 32px;
        background: var(--color-card-bg, #0d0d14);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
    }

    .comparison-card.can-do {
        border-color: rgba(34, 197, 94, 0.3);
    }

    .comparison-card.dev-do {
        border-color: rgba(0, 217, 255, 0.3);
    }

    .comparison-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
    }

    .comparison-card.can-do .comparison-header svg {
        color: #22C55E;
    }

    .comparison-card.dev-do .comparison-header svg {
        color: #00D9FF;
    }

    .comparison-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .comparison-card ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .comparison-card li {
        padding: 10px 0;
        color: var(--color-text-secondary, #94A3B8);
        font-size: 0.95rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .comparison-card li:last-child {
        border-bottom: none;
    }

    .comparison-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .badge-number {
        font-size: 4rem;
        font-weight: 900;
        color: #22C55E;
        line-height: 1;
    }

    .badge-text {
        font-size: 0.9rem;
        color: var(--color-text-secondary, #94A3B8);
        margin-top: 8px;
    }

    /* Benefits Grid Small */
    .benefits-grid-small {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-top: 48px;
    }

    @media (max-width: 768px) {
        .benefits-grid-small {
            grid-template-columns: 1fr;
        }
    }

    .benefit-card-small {
        padding: 24px;
        background: var(--color-card-bg, #0d0d14);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        text-align: center;
    }

    .benefit-card-small:hover {
        border-color: rgba(245, 158, 11, 0.3);
    }

    .benefit-icon-small {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        background: rgba(245, 158, 11, 0.1);
        color: #F59E0B;
    }

    .benefit-card-small h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .benefit-card-small p {
        color: var(--color-text-secondary, #94A3B8);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    /* CTA Section */
    .safety-cta .cta-content {
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(22, 163, 74, 0.05) 100%);
        border-color: rgba(34, 197, 94, 0.2);
    }
</style>
