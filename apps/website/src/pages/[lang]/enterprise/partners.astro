---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, type Lang } from '../../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } }
  ];
}

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

const title = t('partners.meta.title');
const description = t('partners.meta.description');
---

<BaseLayout title={title} description={description}>
    <link rel="stylesheet" href="/styles/enterprise.css" />

    <!-- Background Effects -->
    <div class="bg-grid"></div>
    <div class="bg-gradient"></div>
    <div class="bg-noise"></div>

    <!-- Hero Section -->
    <section class="enterprise-hero">
        <div class="hero-glow safety-glow"></div>
        <div class="container">
            <div class="hero-content">
                <nav class="breadcrumb">
                    <a href={`/${lang}/enterprise`}>Enterprise</a>
                    <span>/</span>
                    <span>{t('partners.breadcrumb')}</span>
                </nav>

                <div class="hero-badge safety-badge">
                    <span class="pulse safety-pulse"></span>
                    {t('partners.hero.badge')}
                </div>

                <h1 class="hero-title">
                    <span class="small">{t('partners.hero.badge')}</span>
                    <span class="gradient safety-gradient">EQUIP YOUR</span><br />
                    CONSULTANTS.
                </h1>

                <p class="hero-subtitle">
                    {t('partners.hero.subtitle')}
                </p>

                <div class="hero-ctas">
                    <a href="mailto:enterprise@snow-flow.dev" class="btn btn-safety">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                        </svg>
                        {t('partners.hero.cta')}
                    </a>
                    <a href={`/${lang}/enterprise`} class="btn btn-secondary">
                        {t('partners.hero.ctaSecondary')}
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Safety Overview Section -->
    <section class="section safety-overview-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label safety-label">{t('partners.safety.label')}</span>
                <h2 class="section-title">{t('partners.safety.title')}</h2>
                <p class="section-subtitle">{t('partners.safety.subtitle')}</p>
            </div>

            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat1')}</span>
                    <span class="stat-label">{t('partners.safety.stat1Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat1Desc')}</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat2')}</span>
                    <span class="stat-label">{t('partners.safety.stat2Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat2Desc')}</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{t('partners.safety.stat3')}</span>
                    <span class="stat-label">{t('partners.safety.stat3Label')}</span>
                    <span class="stat-desc">{t('partners.safety.stat3Desc')}</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Protection Layers Section -->
    <section class="section protection-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label safety-label">{t('partners.protection.label')}</span>
                <h2 class="section-title">{t('partners.protection.title')}</h2>
                <p class="section-subtitle">{t('partners.protection.subtitle')}</p>
            </div>

            <div class="protection-tabs">
                <!-- Tab Buttons -->
                <div class="tab-buttons">
                    <button class="tab-button active" data-tab="validation">
