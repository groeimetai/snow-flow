        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 24px;
        font-size: 0.9rem;
    }

    .breadcrumb a {
        color: var(--color-text-secondary, #94A3B8);
        text-decoration: none;
        transition: color 0.2s ease;
    }

