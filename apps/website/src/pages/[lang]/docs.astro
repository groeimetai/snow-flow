---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, type Lang } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } }
  ];
}

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

const title = lang === 'en' ? 'Quick Start | Snow-Flow' : 'Snelle Start | Snow-Flow';
const description = lang === 'en'
  ? 'Get started with Snow-Flow - the AI-powered ServiceNow development platform. Install, authenticate, and start building in minutes.'
  : 'Begin met Snow-Flow - het AI-aangedreven ServiceNow ontwikkelplatform. Installeer, authenticeer en begin binnen minuten met bouwen.';
---

<BaseLayout title={title} description={description}>
    <!-- Background Effects -->
    <div class="bg-grid"></div>
    <div class="bg-gradient"></div>

    <!-- Main Content -->
    <main class="quickstart-page">
        <div class="container">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="version-badge">
                    <span class="v">Version</span>
                    <span class="num" id="npm-version">loading...</span>
                </div>
                <h1>{lang === 'en' ? 'Quick Start' : 'Snelle Start'}</h1>
                <p class="hero-desc">
                    {lang === 'en'
                        ? 'Get up and running with Snow-Flow in under 5 minutes. Use your approved AI models to build ServiceNow solutions through natural conversation.'
                        : 'Binnen 5 minuten aan de slag met Snow-Flow. Gebruik je goedgekeurde AI-modellen om ServiceNow oplossingen te bouwen via natuurlijke conversatie.'}
                </p>
            </section>

            <!-- Quick Start Steps -->
            <section class="steps-section">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3>{lang === 'en' ? 'Install' : 'Installeren'}</h3>
                        <div class="code-block">
                            <div class="code-header">
                                <span class="code-lang">bash</span>
                                <button class="code-copy">Copy</button>
                            </div>
                            <div class="code-content">
<pre>npm install -g snow-flow</pre>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3>{lang === 'en' ? 'Start' : 'Starten'}</h3>
                        <div class="code-block">
                            <div class="code-header">
                                <span class="code-lang">bash</span>
                                <button class="code-copy">Copy</button>
                            </div>
                            <div class="code-content">
<pre>snow-flow</pre>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3>{lang === 'en' ? 'Authenticate' : 'Authenticeren'}</h3>
                        <div class="code-block">
                            <div class="code-header">
                                <span class="code-lang">TUI</span>
                                <button class="code-copy">Copy</button>
                            </div>
                            <div class="code-content">
<pre>/auth</pre>
                            </div>
                        </div>
                        <p class="step-note">
                            {lang === 'en'
                                ? 'Connects to your LLM provider and ServiceNow instance.'
                                : 'Verbindt met je LLM provider en ServiceNow instance.'}
                        </p>
                    </div>
                </div>
            </section>

            <!-- Features Grid -->
            <section class="features-section">
                <h2>{lang === 'en' ? 'What You Get' : 'Wat Je Krijgt'}</h2>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">üõ†Ô∏è</div>
                        <h3>410+ MCP Tools</h3>
                        <p>{lang === 'en'
                            ? 'Complete ServiceNow development toolkit via Model Context Protocol.'
                            : 'Complete ServiceNow development toolkit via Model Context Protocol.'}</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">ü§ñ</div>
                        <h3>75+ LLM Providers</h3>
                        <p>{lang === 'en'
                            ? 'Use Claude, GPT, DeepSeek, Ollama, or any provider via Models.dev.'
                            : 'Gebruik Claude, GPT, DeepSeek, Ollama, of elke provider via Models.dev.'}</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">‚ö°</div>
                        <h3>{lang === 'en' ? 'Native TUI' : 'Native TUI'}</h3>
                        <p>{lang === 'en'
                            ? 'Beautiful, themeable terminal interface built for developers.'
                            : 'Mooie, thematische terminal interface gebouwd voor developers.'}</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üîê</div>
                        <h3>{lang === 'en' ? 'Enterprise Ready' : 'Enterprise Ready'}</h3>
                        <p>{lang === 'en'
                            ? 'Secure OAuth authentication and stakeholder access controls.'
                            : 'Veilige OAuth authenticatie en stakeholder toegangscontroles.'}</p>
                    </div>
                </div>
            </section>

            <!-- Full Documentation CTA -->
            <section class="docs-cta">
                <h2>{lang === 'en' ? 'Ready to Dive Deeper?' : 'Klaar om Dieper te Duiken?'}</h2>
                <p>{lang === 'en'
                    ? 'Explore the complete documentation for advanced configuration, all MCP tools, and best practices.'
                    : 'Verken de complete documentatie voor geavanceerde configuratie, alle MCP tools en best practices.'}</p>
                <a href="https://docs.snow-flow.dev/" class="btn btn-primary" target="_blank">
                    {lang === 'en' ? 'Explore Full Documentation' : 'Bekijk Volledige Documentatie'} ‚Üí
                </a>
            </section>

            <!-- Quick Links -->
            <section class="quick-links">
                <h2>{lang === 'en' ? 'Quick Links' : 'Snelle Links'}</h2>
                <div class="links-grid">
                    <a href="https://docs.snow-flow.dev/" class="link-card" target="_blank">
                        <span class="link-icon">üìñ</span>
                        <span class="link-title">{lang === 'en' ? 'Getting Started' : 'Aan de Slag'}</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                    <a href="https://docs.snow-flow.dev/config" class="link-card" target="_blank">
                        <span class="link-icon">‚öôÔ∏è</span>
                        <span class="link-title">{lang === 'en' ? 'Configuration' : 'Configuratie'}</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                    <a href="https://docs.snow-flow.dev/providers" class="link-card" target="_blank">
                        <span class="link-icon">üîå</span>
                        <span class="link-title">LLM Providers</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                    <a href="https://docs.snow-flow.dev/mcp-servers" class="link-card" target="_blank">
                        <span class="link-icon">üîß</span>
                        <span class="link-title">MCP Servers</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                    <a href="https://docs.snow-flow.dev/cli" class="link-card" target="_blank">
                        <span class="link-icon">üíª</span>
                        <span class="link-title">CLI Reference</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                    <a href="https://docs.snow-flow.dev/themes" class="link-card" target="_blank">
                        <span class="link-icon">üé®</span>
                        <span class="link-title">Themes</span>
                        <span class="link-arrow">‚Üí</span>
                    </a>
                </div>
            </section>
        </div>
    </main>

    <!-- JSON-LD for Documentation -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "TechArticle",
        "headline": title,
        "description": description,
        "author": { "@type": "Organization", "name": "Snow-Flow Team" },
        "publisher": { "@type": "Organization", "name": "Snow-Flow" }
    })} />
</BaseLayout>

<style>
    .quickstart-page {
        min-height: 100vh;
        padding: 100px 0 60px;
        position: relative;
        z-index: 1;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        margin-bottom: 4rem;
    }

    .version-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(0, 217, 255, 0.1);
        border: 1px solid rgba(0, 217, 255, 0.3);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .version-badge .v {
        color: var(--text-muted);
    }

    .version-badge .num {
        color: var(--accent-cyan);
        font-weight: 600;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -0.02em;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--text-primary), var(--accent-cyan));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-desc {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Steps Section */
    .steps-section {
        margin-bottom: 4rem;
    }

    .step {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .step-number {
        width: 48px;
        height: 48px;
        background: var(--accent-cyan);
        color: var(--bg-primary);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 700;
        flex-shrink: 0;
    }

    .step-content {
        flex: 1;
    }

    .step-content h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
    }

    .step-note {
        font-size: 0.875rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }

    /* Code Blocks */
    .code-block {
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        overflow: hidden;
    }

    .code-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid var(--border-subtle);
    }

    .code-lang {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--text-muted);
        font-weight: 500;
    }

    .code-copy {
        background: transparent;
        border: 1px solid var(--border-medium);
        color: var(--text-secondary);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .code-copy:hover {
        border-color: var(--accent-cyan);
        color: var(--accent-cyan);
    }

    .code-content {
        padding: 1rem;
    }

    .code-content pre {
        margin: 0;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        color: var(--accent-cyan);
    }

    /* Features Section */
    .features-section {
        margin-bottom: 4rem;
    }

    .features-section h2 {
        text-align: center;
        font-size: 1.75rem;
        margin-bottom: 2rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .feature-card {
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s;
    }

    .feature-card:hover {
        border-color: rgba(0, 217, 255, 0.3);
        transform: translateY(-2px);
    }

    .feature-icon {
        font-size: 2rem;
        margin-bottom: 0.75rem;
    }

    .feature-card h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .feature-card p {
        font-size: 0.875rem;
        color: var(--text-secondary);
        line-height: 1.5;
    }

    /* Docs CTA */
    .docs-cta {
        text-align: center;
        padding: 3rem;
        background: var(--bg-card);
        border-radius: 20px;
        border: 1px solid var(--border-subtle);
        margin-bottom: 4rem;
    }

    .docs-cta h2 {
        font-size: 1.75rem;
        margin-bottom: 1rem;
    }

    .docs-cta p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: var(--accent-cyan);
        color: var(--bg-primary);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 217, 255, 0.35);
    }

    /* Quick Links */
    .quick-links h2 {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .link-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.3s;
    }

    .link-card:hover {
        border-color: var(--accent-cyan);
        transform: translateX(4px);
    }

    .link-icon {
        font-size: 1.25rem;
    }

    .link-title {
        flex: 1;
        font-weight: 500;
    }

    .link-arrow {
        color: var(--accent-cyan);
        opacity: 0;
        transition: opacity 0.2s;
    }

    .link-card:hover .link-arrow {
        opacity: 1;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .hero-section h1 {
            font-size: 2rem;
        }

        .hero-desc {
            font-size: 1rem;
        }

        .step {
            flex-direction: column;
            gap: 1rem;
        }

        .step-number {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }

        .links-grid {
            grid-template-columns: 1fr;
        }

        .docs-cta {
            padding: 2rem 1.5rem;
        }
    }
</style>

<script>
    // Copy code
    document.querySelectorAll('.code-copy').forEach(button => {
        button.addEventListener('click', async () => {
            const code = button.closest('.code-block')?.querySelector('pre')?.textContent || '';
            try {
                await navigator.clipboard.writeText(code);
                button.textContent = 'Copied!';
                setTimeout(() => button.textContent = 'Copy', 2000);
            } catch (err) {
                console.error('Failed to copy:', err);
            }
        });
    });

    // Fetch npm version
    async function fetchVersion() {
        try {
            const response = await fetch('https://registry.npmjs.org/snow-flow/latest');
            const data = await response.json();
            const versionEl = document.getElementById('npm-version');
            if (versionEl && data.version) {
                versionEl.textContent = data.version;
            }
        } catch (e) {
            const versionEl = document.getElementById('npm-version');
            if (versionEl) versionEl.textContent = '1.0.0';
        }
    }

    fetchVersion();
</script>
