---
import SEO from '../components/SEO.astro';
import Navigation from '../components/Navigation.astro';
import { getLangFromUrl, useTranslations, type Lang } from '../i18n/utils';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  type?: 'website' | 'article';
  image?: string;
  noindex?: boolean;
}

const { title, description, type = 'website', image, noindex = false } = Astro.props;

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

const locale = lang === 'nl' ? 'nl_NL' : 'en_US';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  <title>{title}</title>

  {noindex && <meta name="robots" content="noindex, nofollow" />}

  <SEO
    title={title}
    description={description}
    type={type}
    locale={locale}
    lang={lang}
    image={image}
  />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg viewBox='0 0 32 32' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3ClinearGradient id='mountain' x1='16' y1='9' x2='16' y2='23' gradientUnits='userSpaceOnUse'%3E%3Cstop offset='0%25' stop-color='%23FFFFFF'/%3E%3Cstop offset='100%25' stop-color='%2300D9FF'/%3E%3C/linearGradient%3E%3C/defs%3E%3Cpath d='M4 23 L10 9 L16 15 L22 9 L28 23 Z' fill='url(%23mountain)' stroke='%2300D9FF' stroke-width='1.2' stroke-linejoin='round'/%3E%3C/svg%3E">
  <link rel="apple-touch-icon" sizes="180x180" href="/logos/icon-only-256.png">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- JSON-LD Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Snow-Flow",
    "url": "https://snow-flow.dev",
    "logo": "https://snow-flow.dev/logos/icon-only-512.png",
    "sameAs": ["https://github.com/groeimetai/snow-flow"]
  })} />

  <!-- JSON-LD SoftwareApplication Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "Snow-Flow",
    "applicationCategory": "DeveloperApplication",
    "operatingSystem": "Windows, macOS, Linux",
    "description": "AI-powered ServiceNow development platform with 500+ MCP tools and 75+ AI providers. Open-source alternative to ServiceNow Build Agent.",
    "url": "https://snow-flow.dev",
    "downloadUrl": "https://github.com/groeimetai/snow-flow",
    "softwareVersion": "1.0.0",
    "author": {
      "@type": "Organization",
      "name": "GroeiMetAI",
      "url": "https://groeimetai.nl"
    },
    "offers": [
      {
        "@type": "Offer",
        "name": "Open Source",
        "price": "0",
        "priceCurrency": "EUR",
        "description": "Free forever, self-hosted"
      },
      {
        "@type": "Offer",
        "name": "Enterprise",
        "price": "99",
        "priceCurrency": "EUR",
        "priceValidUntil": "2025-12-31",
        "description": "Managed cloud with enterprise features"
      }
    ],
    "featureList": [
      "500+ MCP Tools",
      "75+ AI Providers",
      "Jira Integration",
      "Azure DevOps Integration",
      "Multi-agent Orchestration",
      "Terminal UI (TUI)"
    ],
    "screenshot": "https://snow-flow.dev/snow-flow-tui.png"
  })} />
</head>
<body>
  <Navigation />
  <slot />
</body>
</html>
