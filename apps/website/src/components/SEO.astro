---
import { getAlternateLocales, type Lang } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: 'website' | 'article';
  locale?: string;
  lang?: Lang;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  image = '/logos/linkedin-banner.png',
  type = 'website',
  locale = 'en_US',
  lang = 'en',
  publishedTime,
  modifiedTime
} = Astro.props;

const absoluteImage = new URL(image, Astro.site).href;
const alternateLocales = getAlternateLocales(Astro.url.pathname, lang);
const defaultUrl = canonical.replace(/\/(nl)\//, '/en/');

// Generate breadcrumb data
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbLabels: Record<string, Record<string, string>> = {
  en: {
    'enterprise': 'Enterprise',
    'customers': 'For Customers',
    'partners': 'For Partners',
    'developers': 'For Developers',
    'stakeholders': 'For Stakeholders',
    'docs': 'Documentation',
    'cli-reference': 'CLI Reference',
    'tui-guide': 'TUI Guide',
    'mcp-reference': 'MCP Tools',
    'oauth-setup': 'OAuth Setup',
    'stats': 'Statistics',
    'waitlist': 'Waitlist'
  },
  nl: {
    'enterprise': 'Enterprise',
    'customers': 'Voor Klanten',
    'partners': 'Voor Partners',
    'developers': 'Voor Developers',
    'stakeholders': 'Voor Stakeholders',
    'docs': 'Documentatie',
    'cli-reference': 'CLI Referentie',
    'tui-guide': 'TUI Handleiding',
    'mcp-reference': 'MCP Tools',
    'oauth-setup': 'OAuth Setup',
    'stats': 'Statistieken',
    'waitlist': 'Wachtlijst'
  }
};

const breadcrumbs = [
  { name: 'Home', url: `https://snow-flow.dev/${lang}/` }
];

let currentPath = `/${lang}`;
for (let i = 1; i < pathSegments.length; i++) {
  const segment = pathSegments[i];
  currentPath += `/${segment}`;
  const label = breadcrumbLabels[lang]?.[segment] || segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ');
  breadcrumbs.push({
    name: label,
    url: `https://snow-flow.dev${currentPath}/`
  });
}

const breadcrumbSchema = breadcrumbs.length > 1 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((crumb, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": crumb.name,
    "item": crumb.url
  }))
} : null;
---

<!-- Primary Meta Tags -->
<meta name="title" content={title}>
<meta name="description" content={description}>

<!-- Canonical URL -->
<link rel="canonical" href={canonical}>

<!-- Alternate Languages (hreflang) -->
{alternateLocales.map(({ lang: hrefLang, url }) => (
  <link rel="alternate" hreflang={hrefLang} href={url} />
))}
<link rel="alternate" hreflang="x-default" href={defaultUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type}>
<meta property="og:url" content={canonical}>
<meta property="og:title" content={title}>
<meta property="og:description" content={description}>
<meta property="og:image" content={absoluteImage}>
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="627">
<meta property="og:site_name" content="Snow-Flow">
<meta property="og:locale" content={locale}>

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content={canonical}>
<meta name="twitter:title" content={title}>
<meta name="twitter:description" content={description}>
<meta name="twitter:image" content={absoluteImage}>

<!-- Article specific -->
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

<!-- JSON-LD Breadcrumb Schema (only for non-homepage) -->
{breadcrumbSchema && (
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
)}
