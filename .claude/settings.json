{
  "agent": {
    "model": "claude-sonnet-4.5",
    "contextManagement": "auto",
    "subagents": true,
    "maxConcurrentSubagents": 5
  },
  "mcp": {
    "servers": {
      "servicenow-unified": {
        "command": "node",
        "args": ["dist/mcp/servicenow-mcp-unified/index.js"],
        "description": "Unified ServiceNow MCP server with 235+ tools"
      }
    }
  },
  "hooks": {
    "pre-tool": {
      "snow_deploy": ".claude/hooks/pre-deployment-validation.sh",
      "snow_execute_script_with_output": ".claude/hooks/validate-es5-syntax.sh"
    },
    "post-tool": {
      "snow_deploy": ".claude/hooks/post-deployment-tracking.sh",
      "snow_create_update_set": ".claude/hooks/sync-update-set-context.sh"
    },
    "on-error": {
      "*": ".claude/hooks/error-recovery.sh",
      "snow_deploy": ".claude/hooks/deployment-rollback.sh"
    }
  },
  "retryPolicy": {
    "maxAttempts": 3,
    "backoff": "exponential",
    "initialDelay": 1000,
    "maxDelay": 10000
  },
  "performance": {
    "promptCaching": true,
    "contextCompaction": "auto",
    "maxContextWindow": 200000
  }
}
