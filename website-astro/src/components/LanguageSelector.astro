---
import { getLangFromUrl } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;

// Get the path without the language prefix
const pathWithoutLang = currentPath.replace(/^\/(en|nl)/, '') || '/';

const languages = [
  { code: 'en', label: 'English', flag: 'ðŸ‡¬ðŸ‡§' },
  { code: 'nl', label: 'Nederlands', flag: 'ðŸ‡³ðŸ‡±' }
];

const currentLanguage = languages.find(l => l.code === currentLang) || languages[0];
---

<div class="lang-dropdown">
  <button class="lang-trigger" aria-label="Select language" aria-expanded="false">
    <svg class="globe-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="2" y1="12" x2="22" y2="12"></line>
      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
    </svg>
    <span class="current-lang">{currentLang.toUpperCase()}</span>
    <svg class="chevron-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>

  <div class="lang-menu">
    {languages.map((lang) => (
      <a
        href={`/${lang.code}${pathWithoutLang}`}
        class:list={['lang-item', { active: currentLang === lang.code }]}
      >
        <span class="lang-flag">{lang.flag}</span>
        <span class="lang-name">{lang.label}</span>
        {currentLang === lang.code && (
          <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        )}
      </a>
    ))}
  </div>
</div>

<style>
  .lang-dropdown {
    position: relative;
  }

  .lang-trigger {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: var(--text-secondary, #94A3B8);
    cursor: pointer;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 0.875rem;
    font-weight: 500;
    font-family: inherit;
  }

  .lang-trigger:hover {
    color: var(--text-primary, #FFFFFF);
  }

  .lang-dropdown.open .lang-trigger {
    color: var(--text-primary, #FFFFFF);
  }

  .globe-icon {
    width: 18px;
    height: 18px;
    opacity: 0.6;
    transition: all 0.25s ease;
  }

  .lang-trigger:hover .globe-icon {
    opacity: 1;
    color: var(--accent-cyan, #00D9FF);
  }

  .lang-dropdown.open .globe-icon {
    opacity: 1;
    color: var(--accent-cyan, #00D9FF);
  }

  .current-lang {
    letter-spacing: 0.02em;
    font-size: 0.8125rem;
  }

  .chevron-icon {
    width: 14px;
    height: 14px;
    opacity: 0.4;
    transition: all 0.25s ease;
    margin-left: -0.125rem;
  }

  .lang-trigger:hover .chevron-icon {
    opacity: 0.7;
  }

  .lang-dropdown.open .chevron-icon {
    transform: rotate(180deg);
    opacity: 0.8;
  }

  .lang-menu {
    position: absolute;
    top: calc(100% + 12px);
    right: 0;
    min-width: 150px;
    background: rgba(12, 12, 16, 0.95);
    backdrop-filter: blur(24px) saturate(180%);
    -webkit-backdrop-filter: blur(24px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    padding: 0.375rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px) scale(0.95);
    transform-origin: top right;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.3),
      0 10px 20px -5px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(0, 217, 255, 0.05);
  }

  .lang-dropdown.open .lang-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .lang-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.875rem;
    color: var(--text-secondary, #94A3B8);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .lang-item:hover {
    background: rgba(255, 255, 255, 0.06);
    color: var(--text-primary, #FFFFFF);
  }

  .lang-item.active {
    color: var(--accent-cyan, #00D9FF);
    background: rgba(0, 217, 255, 0.08);
  }

  .lang-flag {
    font-size: 1.125rem;
    line-height: 1;
  }

  .lang-name {
    flex: 1;
  }

  .check-icon {
    width: 14px;
    height: 14px;
    color: var(--accent-cyan, #00D9FF);
    opacity: 0.9;
  }
</style>

<script>
  // Toggle dropdown
  document.querySelectorAll('.lang-dropdown').forEach(dropdown => {
    const trigger = dropdown.querySelector('.lang-trigger');

    trigger?.addEventListener('click', (e) => {
      e.stopPropagation();
      dropdown.classList.toggle('open');
    });
  });

  // Close on click outside
  document.addEventListener('click', () => {
    document.querySelectorAll('.lang-dropdown.open').forEach(dropdown => {
      dropdown.classList.remove('open');
    });
  });

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      document.querySelectorAll('.lang-dropdown.open').forEach(dropdown => {
        dropdown.classList.remove('open');
      });
    }
  });
</script>
