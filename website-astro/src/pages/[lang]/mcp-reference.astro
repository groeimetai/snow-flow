    name: 'Development Assistant',
    icon: 'ü§ñ',
    description: 'Intelligent development assistance',
    tools: ['snow_find_artifact', 'snow_edit_artifact', 'snow_get_by_sysid', 'snow_analyze_artifact', 'snow_comprehensive_search', 'snow_analyze_requirements']
  }
];
---

<BaseLayout
  title={t('meta.mcpReference.title')}
  description={t('meta.mcpReference.description')}
  type="article"
>
  <section class="reference-hero">
    <div class="container">
      <h1>{t('nav.mcpReference')}</h1>
      <p class="reference-intro">{t('meta.mcpReference.description')}</p>
    </div>
  </section>

  <section class="reference-content">
    <div class="container">
      <div class="search-container">
        <input type="text" class="search-input" placeholder="Search tools..." id="tool-search">
      </div>

      <div class="servers-list">
        {servers.map((server) => (
          <div class="server-section" data-server={server.name.toLowerCase()}>
            <div class="server-header">
              <span class="server-icon">{server.icon}</span>
              <div>
                <h2>{server.name}</h2>
                <p>{server.description}</p>
              </div>
              <span class="tool-badge">{server.tools.length} tools</span>
            </div>
            <div class="tools-grid">
              {server.tools.map((tool) => (
                <div class="tool-card" data-tool={tool.toLowerCase()}>
                  <code>{tool}</code>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- JSON-LD for MCP Reference -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Snow-Flow MCP Tools",
    "description": t('meta.mcpReference.description'),
    "numberOfItems": 410,
    "itemListElement": servers.map((server, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": server.name,
      "description": server.description
    }))
  })} />

  <script>
    const searchInput = document.getElementById('tool-search') as HTMLInputElement;
    const toolCards = document.querySelectorAll('.tool-card');
    const serverSections = document.querySelectorAll('.server-section');

    searchInput?.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value.toLowerCase();

      toolCards.forEach((card) => {
        const tool = card.getAttribute('data-tool') || '';
        const match = tool.includes(query);
        (card as HTMLElement).style.display = match || !query ? 'block' : 'none';
      });

      serverSections.forEach((section) => {
        const visibleTools = section.querySelectorAll('.tool-card[style="display: block"], .tool-card:not([style])');
        const hasVisibleTools = Array.from(visibleTools).some((t) =>
          (t as HTMLElement).style.display !== 'none'
        );
        (section as HTMLElement).style.display = hasVisibleTools || !query ? 'block' : 'none';
      });
    });
  </script>
</BaseLayout>

<style>
  .reference-hero {
    padding: 8rem 0 3rem;
    text-align: center;
  }

  .reference-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #FFFFFF 0%, var(--accent-cyan) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .reference-intro {
    color: var(--text-secondary);
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .reference-content {
    padding: 2rem 0 6rem;
  }

  .search-container {
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .search-input {
    width: 100%;
    padding: 1rem 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
    border-radius: 12px;
    color: var(--text-primary);
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.2s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--accent-cyan);
    box-shadow: 0 0 0 3px rgba(0, 217, 255, 0.1);
  }

  .search-input::placeholder {
    color: var(--text-muted);
  }

  .servers-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .server-section {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    padding: 2rem;
  }

  .server-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .server-icon {
    font-size: 2rem;
  }

  .server-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-primary);
  }

  .server-header p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .tool-badge {
    margin-left: auto;
    background: rgba(0, 217, 255, 0.1);
    color: var(--accent-cyan);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 0.75rem;
  }

  .tool-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
  }

  .tool-card:hover {
    border-color: var(--accent-cyan);
    background: rgba(0, 217, 255, 0.05);
  }

  .tool-card code {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .server-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .tool-badge {
      margin-left: 0;
    }
  }
</style>
