---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { languages, useTranslations, type Lang } from '../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

const servers = [
  {
    name: 'Deployment Server',
    icon: 'üöÄ',
    description: 'Widget & artifact deployment',
    tools: ['snow_create_artifact', 'snow_update', 'snow_delete', 'snow_validate_deployment', 'snow_rollback_deployment', 'snow_preview_widget', 'snow_widget_test', 'snow_batch_deploy', 'snow_deployment_status', 'snow_deployment_history']
  },
  {
    name: 'Operations Server',
    icon: '‚öôÔ∏è',
    description: 'Core ServiceNow operations',
    tools: ['snow_query_table', 'snow_query_incidents', 'snow_cmdb_search', 'snow_user_lookup', 'snow_operational_metrics', 'snow_knowledge_search', 'snow_create_incident', 'snow_update_incident', 'snow_close_incident', 'snow_create_change_request']
  },
  {
    name: 'Automation Server',
    icon: '‚ö°',
    description: 'Script execution and automation',
    tools: ['snow_execute_background_script', 'snow_execute_script_with_output', 'snow_get_script_output', 'snow_execute_script_sync', 'snow_get_logs', 'snow_test_rest_connection', 'snow_trace_execution', 'snow_schedule_job', 'snow_create_event']
  },
  {
    name: 'Platform Development',
    icon: 'üèóÔ∏è',
    description: 'Platform development artifacts',
    tools: ['snow_create_ui_page', 'snow_create_script_include', 'snow_create_business_rule', 'snow_create_client_script', 'snow_create_ui_policy', 'snow_create_ui_action']
  },
  {
    name: 'Integration Server',
    icon: 'üîó',
    description: 'Integration and data management',
    tools: ['snow_create_rest_message', 'snow_create_transform_map', 'snow_create_import_set', 'snow_test_web_service', 'snow_configure_email']
  },
  {
    name: 'System Properties',
    icon: '‚öôÔ∏è',
    description: 'System property management',
    tools: ['snow_property_get', 'snow_property_set', 'snow_property_list', 'snow_property_delete', 'snow_property_bulk_update', 'snow_property_export', 'snow_property_import']
  },
  {
    name: 'Update Set Server',
    icon: 'üì¶',
