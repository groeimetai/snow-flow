{
  "name": "Service Portal Widget",
  "description": "ServiceNow Service Portal widget template with various types and configurations",
  "version": "1.0.0",
  "type": "widget",
  "requirements": {
    "tables": [],
    "workflows": [],
    "ui": [
      {
        "type": "widget",
        "name": "Service Portal Widget",
        "description": "Customizable Service Portal widget"
      }
    ],
    "businessRules": [],
    "security": []
  },
  "preferences": {
    "useModernUI": true,
    "includeMobileSupport": true,
    "generateTests": true,
    "includeDocumentation": true,
    "followBestPractices": true,
    "widgetTypes": ["counter", "dashboard", "form", "chart", "list"],
    "supportedTables": ["task", "incident", "sc_request", "change_request", "problem", "sys_user"],
    "features": {
      "realTimeUpdates": true,
      "configurable": true,
      "responsive": true,
      "accessible": true,
      "multiLanguage": true
    }
  },
  "components": {
    "widget": {
      "files": {
        "html": "widget.html",
        "javascript": "widget.js",
        "css": "widget.css", 
        "server": "widget.server.js",
        "options": "widget.option_schema.json"
      },
      "properties": {
        "title": "Service Portal Widget",
        "description": "Custom widget for ServiceNow Service Portal",
        "category": "custom",
        "public": true,
        "roles": "",
        "dependencies": ""
      }
    }
  },
  "examples": {
    "counter": {
      "description": "Display count of records from a table",
      "usage": "snow-flow widget \"Task Counter\" --type counter --table task"
    },
    "dashboard": {
      "description": "Dashboard view with multiple data points",
      "usage": "snow-flow widget \"Service Dashboard\" --type dashboard --table incident"
    },
    "form": {
      "description": "Form for creating/editing records",
      "usage": "snow-flow widget \"Quick Form\" --type form --table sc_request"
    },
    "chart": {
      "description": "Chart visualization of data",
      "usage": "snow-flow widget \"Status Chart\" --type chart --table incident"
    },
    "list": {
      "description": "List view of records",
      "usage": "snow-flow widget \"Recent Items\" --type list --table task"
    }
  }
}
