{
  "requirements": {
    "tables": [
      {
        "name": "x_task_mgmt_task",
        "label": "Task",
        "description": "Task management table",
        "fields": [
          {
            "name": "title",
            "label": "Title",
            "type": "string",
            "maxLength": 255,
            "mandatory": true
          },
          {
            "name": "description",
            "label": "Description",
            "type": "text",
            "maxLength": 4000
          },
          {
            "name": "priority",
            "label": "Priority",
            "type": "choice",
            "choices": ["Low", "Medium", "High", "Critical"],
            "defaultValue": "Medium"
          },
          {
            "name": "status",
            "label": "Status",
            "type": "choice",
            "choices": ["New", "In Progress", "Pending", "Completed", "Cancelled"],
            "defaultValue": "New"
          },
          {
            "name": "assigned_to",
            "label": "Assigned To",
            "type": "reference",
            "reference": "sys_user"
          },
          {
            "name": "assignment_group",
            "label": "Assignment Group",
            "type": "reference",
            "reference": "sys_user_group"
          },
          {
            "name": "due_date",
            "label": "Due Date",
            "type": "date"
          },
          {
            "name": "completion_percentage",
            "label": "Completion %",
            "type": "percent",
            "defaultValue": "0"
          },
          {
            "name": "category",
            "label": "Category",
            "type": "choice",
            "choices": ["Development", "Testing", "Documentation", "Support", "Other"],
            "defaultValue": "Other"
          }
        ]
      }
    ],
    "workflows": [
      {
        "name": "Task Assignment Workflow",
        "description": "Automatic task assignment based on category",
        "table": "x_task_mgmt_task",
        "triggerCondition": "assigned_to=NULL",
        "activities": [
          {
            "name": "Auto Assignment",
            "type": "script",
            "description": "Automatically assign tasks based on workload"
          }
        ]
      },
      {
        "name": "Task Approval Workflow",
        "description": "Approval workflow for high-priority tasks",
        "table": "x_task_mgmt_task",
        "triggerCondition": "priority=Critical",
        "activities": [
          {
            "name": "Manager Approval",
            "type": "approval",
            "assignmentGroup": "managers",
            "priority": "high"
          }
        ],
        "approvals": [
          {
            "name": "Manager Approval",
            "approver": "manager",
            "condition": "priority=Critical",
            "dueDate": "2 days"
          }
        ]
      }
    ],
    "ui": [
      {
        "type": "form",
        "name": "Task Form",
        "table": "x_task_mgmt_task",
        "fields": ["title", "description", "priority", "status", "assigned_to", "assignment_group", "due_date", "completion_percentage", "category"],
        "layout": "standard"
      },
      {
        "type": "list",
        "name": "Task List",
        "table": "x_task_mgmt_task",
        "fields": ["title", "priority", "status", "assigned_to", "due_date", "completion_percentage"]
      },
      {
        "type": "portal",
        "name": "Task Dashboard",
        "description": "Task overview dashboard",
        "widgets": ["task_metrics", "recent_tasks", "my_tasks", "overdue_tasks"]
      }
    ],
    "businessRules": [
      {
        "name": "Task Auto-Assignment",
        "table": "x_task_mgmt_task",
        "when": "before",
        "actions": ["insert"],
        "description": "Automatically assign tasks based on category and workload"
      },
      {
        "name": "Due Date Validation",
        "table": "x_task_mgmt_task",
        "when": "before",
        "actions": ["insert", "update"],
        "description": "Validate due date is not in the past"
      },
      {
        "name": "Status Change Notification",
        "table": "x_task_mgmt_task",
        "when": "after",
        "actions": ["update"],
        "description": "Send notifications when task status changes"
      }
    ],
    "security": [
      {
        "type": "acl",
        "name": "Task Read Access",
        "table": "x_task_mgmt_task",
        "operation": "read",
        "roles": ["task_user", "task_manager"]
      },
      {
        "type": "acl",
        "name": "Task Write Access",
        "table": "x_task_mgmt_task",
        "operation": "write",
        "roles": ["task_manager"]
      },
      {
        "type": "acl",
        "name": "Task Delete Access",
        "table": "x_task_mgmt_task",
        "operation": "delete",
        "roles": ["task_admin"]
      }
    ]
  },
  "preferences": {
    "useModernUI": true,
    "includeMobileSupport": true,
    "generateTests": true,
    "includeDocumentation": true,
    "followBestPractices": true
  }
}