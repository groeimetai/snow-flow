{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [],
    "noUncheckedIndexedAccess": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitOverride": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/deprecated/**/*",
    "src/mcp/servicenow-mcp-unified/tools/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/security/**/*",
    "src/mcp/servicenow-mcp-unified/tools/operations/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/platform/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/rest-api/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/script-includes/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/ui-actions/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/ui-policies/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/system-properties/index.ts",
    "src/mcp/servicenow-mcp-unified/tools/machine-learning/*.ts",
    "src/queen/queen-memory-system.ts",
    "src/queen/agent-factory.ts",
    "src/queen/neural-learning.ts",
    "src/monitoring/performance-tracker.ts",
    "src/monitoring/enhanced-monitoring-system.ts",
    "src/utils/unified-script-executor.ts",
    "src/utils/enhanced-script-executor.ts",
    "src/utils/mcp-persistent-guard.ts",
    "src/testing/integration-test-suite.ts",
    "src/snow-flow-system.ts",
    "src/sdk/queen-orchestrator.ts",
    "src/plugin/**/*",
    "src/lsp/**/*",
    "src/tool/bash.ts",
    "src/tool/patch.ts",
    "src/utils/memory-safe-collections.ts",
    "src/utils/servicenow-client-with-tracking.ts",
    "src/utils/snowcode-output-interceptor.ts"
  ]
}
